<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.zjut.qiandao.mapper.StudentMapper" >
    <resultMap id="student" type="cn.edu.zjut.qiandao.entity.Student" >
        <id column="student_id" property="studentId" jdbcType="INTEGER"/>
        <result column="student_name" property="name" jdbcType="VARCHAR"  />
        <result column="student_password" property="password" jdbcType="VARCHAR"  />
        <result column="student_classname" property="classname" jdbcType="VARCHAR"  />
        <result column="student_departname" property="departname" jdbcType="VARCHAR"  />
        <result column="student_email" property="email" jdbcType="VARCHAR"  />
        <result column="student_img" property="img" jdbcType="VARCHAR"  />
    </resultMap>

    <select id="getStudentInfo" resultMap="student"  >
        select student.*
        from user,student
        where user.student_id=student.student_id
        and user.openid=#{openid}
    </select>

</mapper>
