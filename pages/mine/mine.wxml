<!--pages/mine/mine.wxml-->
<view class="mine-wrapper">
  <view class="avatar-wrapper">
    <view>
      <view class="avatar">
       <open-data style='width:100px;height:100px;display:inline-block;overflow:hidden;border-radius:50%;' type='userAvatarUrl'></open-data>
      </view>
      <view class="text">
        <text wx:if="{{nick}}">{{nick}}</text>
        <text wx:else bindtap="toLogin">登录</text>
      </view>

    </view>
  </view>
  <view class="list-wrapper">
    <view class="weui-cells weui-cells_after-title">
      <block wx:for="{{menuitems}}" wx:key="menu_for">
        <navigator url="{{item.url}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image src="{{item.icon}}"></image>
          </view>
          <view class="weui-cell__bd">{{item.text}}</view>
          <view class="weui-cell__ft weui-cell__ft_in-access">{{item.tips}}</view>
        </navigator>
      </block>
    </view>
  </view>
</view>