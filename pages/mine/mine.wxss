/* pages/mine/mine.wxss */

.avatar-wrapper {
  background: #1b82d1;
  padding: 25px 0;
  padding-bottom: 5px;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width: 100px;
  height: 100px;
}

.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}

.weui-cell__hd image {
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}

.weui-cells::after{
  content: none;
  border-bottom: none;
}

.weui-cells::before{
  border-top: none;
}

.page__bd {
  padding-bottom: 0px;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
  text-align: center;
}

.weui-btn{
  background:#ffffff;
  color: #000000;
}